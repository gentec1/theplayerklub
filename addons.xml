<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.program.playerwiz" name="Players wizard" version="0.0.2" provider-name="Players klub">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Players wizard</summary>
    <description lang="en">Players klub wizard</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.playklub" version="3.1" name="[COLOR gold]THE PLAYERS KLUB[/COLOR]" provider-name="Players Klub">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.addon.common" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup">
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>The Players Klub</summary>
        <description>Players Klub - Live TV / PPV / Sports / Kids / Movies / Entertainment at an affordable price for all.</description>
        <disclaimer></disclaimer>
        <language>en</language>
        <platform>all</platform>
    </extension>
</addon>

    <addon id="repository.playersklub" name="[COLOR red ]THE PLAYERS KLUB[/COLOR] Repository" version="1.1.1" provider-name="THEPLAYERSKLUB">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="playersklub">
            <info compressed="false">https://raw.githubusercontent.com/gentec1/theplayerklub/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/gentec1/theplayerklub/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.github.com/gentec1/theplayerklub/master/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Install My Addons</summary>
            <description>Download and install addons THE PLAYERS KLUB</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
